-- Key Validation + Load Main Script
SubmitBtn.MouseButton1Click:Connect(function()
	if KeyBox.Text == KEY_REQUIRED then
		print("üîì [SigmaZ Hub] Key accepted. Loading main script...")
		KeyFrame:Destroy()
		local success, err = pcall(function()
			loadstring(game:HttpGet("https://raw.githubusercontent.com/Mineblox15/scripthub/refs/heads/main/mainscript"))()
		end)
		if success then
			print("‚úÖ [SigmaZ Hub] Main script loaded successfully.")
		else
			warn("‚ùå [SigmaZ Hub] Failed to load main script: "..tostring(err))
		end
	else
		print("‚ùå [SigmaZ Hub] Wrong key entered.")
		KeyBox.Text = ""
		KeyBox.PlaceholderText = "‚ùå Invalid Key"
		local shake = TweenService:Create(KeyFrame, TweenInfo.new(0.1, Enum.EasingStyle.Linear, Enum.EasingDirection.InOut, 3), {Position = KeyFrame.Position + UDim2.new(0,5,0,0)})
		shake:Play()
	end
end)
