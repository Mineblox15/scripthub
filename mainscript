--// ‚ú® SigmaZ Hub with Sidebar & Live Stats ‚ú®

local Players = game:GetService("Players")
local MarketplaceService = game:GetService("MarketplaceService")
local TweenService = game:GetService("TweenService")
local RunService = game:GetService("RunService")

local KEY_REQUIRED = "Password"
local WorkingScript = {
	{ Name = "Inf Yield", Url = "https://raw.githubusercontent.com/Mineblox15/scripthub/refs/heads/main/scriptfile1" },
	{ Name = "99 Nights", Url = "https://raw.githubusercontent.com/Mineblox15/scripthub/refs/heads/main/99nights" },
	{ Name = "ESP", Url = "https://raw.githubusercontent.com/Lucasfin000/SpaceHub/main/UESP" }
}

local player = Players.LocalPlayer

--// ScreenGui
local ScreenGui = Instance.new("ScreenGui")
ScreenGui.Name = "SigmaZHub"
ScreenGui.Parent = player:WaitForChild("PlayerGui")
ScreenGui.ZIndexBehavior = Enum.ZIndexBehavior.Sibling

--// Key Frame
local KeyFrame = Instance.new("Frame")
KeyFrame.Size = UDim2.new(0, 320, 0, 180)
KeyFrame.Position = UDim2.new(0.5, -160, 0.5, -90)
KeyFrame.BackgroundColor3 = Color3.fromRGB(20, 20, 35)
KeyFrame.BorderSizePixel = 0
KeyFrame.Active = true
KeyFrame.Draggable = true
KeyFrame.Parent = ScreenGui
Instance.new("UICorner", KeyFrame)

local KeyTitle = Instance.new("TextLabel")
KeyTitle.Size = UDim2.new(1, 0, 0, 50)
KeyTitle.BackgroundColor3 = Color3.fromRGB(55, 55, 120)
KeyTitle.TextColor3 = Color3.fromRGB(255, 255, 255)
KeyTitle.Text = "üîë SigmaZ Hub Access"
KeyTitle.Font = Enum.Font.GothamBold
KeyTitle.TextSize = 22
KeyTitle.Parent = KeyFrame
Instance.new("UICorner", KeyTitle)

local KeyBox = Instance.new("TextBox")
KeyBox.Size = UDim2.new(1, -40, 0, 45)
KeyBox.Position = UDim2.new(0, 20, 0, 60)
KeyBox.PlaceholderText = "Enter Key..."
KeyBox.Text = ""
KeyBox.Font = Enum.Font.Gotham
KeyBox.TextSize = 18
KeyBox.TextColor3 = Color3.fromRGB(0,0,0)
KeyBox.BackgroundColor3 = Color3.fromRGB(230, 230, 230)
KeyBox.Parent = KeyFrame
Instance.new("UICorner", KeyBox)

local SubmitBtn = Instance.new("TextButton")
SubmitBtn.Size = UDim2.new(1, -40, 0, 45)
SubmitBtn.Position = UDim2.new(0, 20, 0, 115)
SubmitBtn.BackgroundColor3 = Color3.fromRGB(70, 70, 150)
SubmitBtn.Text = "Unlock SigmaZ Hub"
SubmitBtn.TextColor3 = Color3.fromRGB(255, 255, 255)
SubmitBtn.Font = Enum.Font.GothamBold
SubmitBtn.TextSize = 18
SubmitBtn.Parent = KeyFrame
Instance.new("UICorner", SubmitBtn)

--// Main Hub
local HubFrame = Instance.new("Frame")
HubFrame.Size = UDim2.new(0, 500, 0, 400)
HubFrame.Position = UDim2.new(0.25, 0, 0.25, 0)
HubFrame.BackgroundColor3 = Color3.fromRGB(20, 20, 35)
HubFrame.BorderSizePixel = 0
HubFrame.Active = true
HubFrame.Draggable = true
HubFrame.Visible = false
HubFrame.Parent = ScreenGui
Instance.new("UICorner", HubFrame)

-- Title Bar
local Title = Instance.new("TextLabel")
Title.Size = UDim2.new(1, -45, 0, 40)
Title.BackgroundColor3 = Color3.fromRGB(55, 55, 120)
Title.TextColor3 = Color3.fromRGB(255, 255, 255)
Title.Text = "‚ú® SigmaZ Hub ‚ú®"
Title.Font = Enum.Font.GothamBold
Title.TextSize = 22
Title.Parent = HubFrame
Instance.new("UICorner", Title)

-- Minimize Button
local MinBtn = Instance.new("TextButton")
MinBtn.Size = UDim2.new(0, 40, 0, 40)
MinBtn.Position = UDim2.new(1, -40, 0, 0)
MinBtn.BackgroundColor3 = Color3.fromRGB(80, 80, 150)
MinBtn.Text = "-"
MinBtn.TextColor3 = Color3.fromRGB(255, 255, 255)
MinBtn.Font = Enum.Font.GothamBold
MinBtn.TextSize = 20
MinBtn.Parent = HubFrame
Instance.new("UICorner", MinBtn)

-- Sidebar
local Sidebar = Instance.new("Frame")
Sidebar.Size = UDim2.new(0, 150, 1, -40)
Sidebar.Position = UDim2.new(0, 0, 0, 40)
Sidebar.BackgroundColor3 = Color3.fromRGB(35, 35, 50)
Sidebar.Parent = HubFrame
Instance.new("UICorner", Sidebar)

local SidebarTitle = Instance.new("TextLabel")
SidebarTitle.Size = UDim2.new(1, 0, 0, 30)
SidebarTitle.Position = UDim2.new(0, 0, 0, 0)
SidebarTitle.BackgroundTransparency = 0.3
SidebarTitle.Text = "üìú Scripts"
SidebarTitle.TextColor3 = Color3.fromRGB(255,255,255)
SidebarTitle.Font = Enum.Font.GothamBold
SidebarTitle.TextSize = 18
SidebarTitle.Parent = Sidebar

-- Script Buttons in Sidebar
local yPos = 35
for i, scriptData in ipairs(WorkingScript) do
	local Btn = Instance.new("TextButton")
	Btn.Size = UDim2.new(1, -10, 0, 35)
	Btn.Position = UDim2.new(0, 5, 0, yPos)
	Btn.BackgroundColor3 = Color3.fromRGB(75, 75, 140)
	Btn.TextColor3 = Color3.fromRGB(255, 255, 255)
	Btn.Text = "‚ñ∂ " .. scriptData.Name
	Btn.Font = Enum.Font.GothamBold
	Btn.TextSize = 16
	Btn.Parent = Sidebar
	Instance.new("UICorner", Btn)

	Btn.MouseEnter:Connect(function()
		TweenService:Create(Btn, TweenInfo.new(0.2), {BackgroundColor3 = Color3.fromRGB(100,100,180)}):Play()
	end)
	Btn.MouseLeave:Connect(function()
		TweenService:Create(Btn, TweenInfo.new(0.2), {BackgroundColor3 = Color3.fromRGB(75,75,140)}):Play()
	end)

	Btn.MouseButton1Click:Connect(function()
		print("‚ö° [SigmaZ Hub] Loading " .. scriptData.Name)
		local success, result = pcall(function()
			return loadstring(game:HttpGet(scriptData.Url))()
		end)
		if success then
			print("‚úÖ Loaded " .. scriptData.Name)
		else
			warn("‚ùå Failed: " .. tostring(result))
		end
	end)
	yPos = yPos + 45
end

-- Content Frame (live stats & info)
local Content = Instance.new("Frame")
Content.Size = UDim2.new(1, -150, 1, -40)
Content.Position = UDim2.new(0, 150, 0, 40)
Content.BackgroundColor3 = Color3.fromRGB(35, 35, 50)
Content.Parent = HubFrame
Instance.new("UICorner", Content)

local InfoLabel = Instance.new("TextLabel")
InfoLabel.Size = UDim2.new(1, -20, 1, -20)
InfoLabel.Position = UDim2.new(0, 10, 0, 10)
InfoLabel.BackgroundTransparency = 1
InfoLabel.TextColor3 = Color3.fromRGB(220, 220, 220)
InfoLabel.TextXAlignment = Enum.TextXAlignment.Left
InfoLabel.TextYAlignment = Enum.TextYAlignment.Top
InfoLabel.TextWrapped = true
InfoLabel.Font = Enum.Font.Gotham
InfoLabel.TextSize = 16
InfoLabel.Text = ""
InfoLabel.Parent = Content

-- Live Stats Update
RunService.RenderStepped:Connect(function()
	InfoLabel.Text = string.format(
	"üéÆ Game: %s\nüìå Place ID: %s\nüìù Version: %s\nüÜî Job ID: %s\nüë• Players: %d",
	MarketplaceService:GetProductInfo(game.PlaceId).Name,
	game.PlaceId,
	game.PlaceVersion,
	game.JobId,
	#Players:GetPlayers()
	)
end)

-- Minimize Function
local minimized = false
MinBtn.MouseButton1Click:Connect(function()
	minimized = not minimized
	if minimized then
		Sidebar.Visible = false
		Content.Visible = false
		HubFrame.Size = UDim2.new(0, 500, 0, 40)
		MinBtn.Text = "+"
	else
		Sidebar.Visible = true
		Content.Visible = true
		HubFrame.Size = UDim2.new(0, 500, 0, 400)
		MinBtn.Text = "-"
	end
end)

-- Key Validation
SubmitBtn.MouseButton1Click:Connect(function()
	if KeyBox.Text == KEY_REQUIRED then
		KeyFrame:Destroy()
		HubFrame.Visible = true
	else
		KeyBox.Text = ""
		KeyBox.PlaceholderText = "‚ùå Invalid Key"
		local shake = TweenService:Create(KeyFrame, TweenInfo.new(0.1, Enum.EasingStyle.Linear, Enum.EasingDirection.InOut, 3), {Position = KeyFrame.Position + UDim2.new(0,5,0,0)})
		shake:Play()
	end
end)
